{% extends "base.html.twig" %}
{%  block title %}Editar perfil{% endblock %}

{% block body %}
    <h2>Editar perfil</h2>
    <div class="row justify-content-center">
        <div class="col-6">
            {{ form_start(form, {'method': 'POST'}) }}
            {{ form_widget(form.cod_usuario,{
                    "value": app.user.username,
                }) }}
            <div class="form-group row">
                <div class="col-6">
                    {{ form_label(form.usuario,"Nombre usuario") }}
                    {{ form_widget(form.usuario,{
                        "disabled": "true",
                        "value": app.user.username,
                        "attr": {"class":"form-control"}
                    }) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-6">
                    {{ form_label(form.descripcion,"Descripcion") }}
                    {{ form_widget(form.descripcion,{
                        "attr":{"class":"form-control",
                        "value": app.user.descripcion
                    }})}}
                </div>
            </div>

            <button class="btn btn-primary">{{ button_label|default("Modificar") }}</button>

            {{ form_end(form) }}
            <a class="btn btn-secondary btn-sm" href="{{ path("perfil_index") }}">Atras</a>
        </div>
        {#<div class="col-6">
        </div>#}
    </div>
{% endblock %}
