{% extends "base.html.twig" %}

{% block title %}Editar departamento {{ departamento.cod_departamento }}{% endblock %}

{% block body %}
    <h1>Editar departamento {{ departamento.cod_departamento }}</h1>
    <div class="col-12">
        {{ form_start(form, {'method': 'POST'}) }}
        <div class="form-group row">
            <div class="col-3">
                {{ form_label(form.cod_departamento, "Codigo departamento") }}
                {{ form_widget(form.cod_departamento,{
            "attr":{"class":"form-control"},
            "value": departamento.cod_departamento
        }) }}
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                {{ form_label(form.desc_departamento, "Descripcion departamento") }}
                {{ form_widget(form.desc_departamento,{
            "attr":{"class":"form-control"},
        }) }}
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                {{ form_label(form.volumen_negocio, "Volumen negocio") }}
                {{ form_widget(form.volumen_negocio,{
            "attr":{"class":"form-control"},
        }) }}
            </div>
        </div>
            
        <button class="btn btn-primary">Editar</button>
        {{ form_end(form) }}
        {% if is_granted("ROLE_ADMIN") %}
            {{ include("departamentos/_formulario_borrar.html.twig") }}
        {% endif %}
        <div class="row">
            <a href="{{ path("departamentos_index") }}" class="btn btn-secondary">Volver atras</a>
        </div>
    </div>
{% endblock %}