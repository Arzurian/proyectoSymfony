{% extends "base.html.twig" %}

{% block title %}Nuevo departamento{% endblock %}

{% block body %}
    <h1>Nuevo departamento</h1>
    <div class="col-12">
        {#        {{ include("departamentos/_formulario.html.twig") }}#}
        {{ form_start(form, {'method': 'POST'}) }}
        <div class="form-group row">
            <div class="col-3">
                {{ form_label(form.cod_departamento,"Codigo departamento") }}
                {{ form_widget(form.cod_departamento,{
                    "attr":{"class":"form-control"},
                    "value": codigo|default("")
                }) }}
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                {{ form_label(form.desc_departamento,"Descripcion departamento") }}
                {{ form_widget(form.desc_departamento,{
                    "attr":{"class":"form-control"},
                }) }}
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                {{ form_label(form.volumen_negocio,"Volumen negocio") }}
                {{ form_widget(form.volumen_negocio,{
                    "attr":{"class":"form-control"},
                    "value": volumen|default("")
                }) }}
            </div>
        </div>
        <button class="btn btn-primary">{{ button_label|default("Crear") }}</button>
        {{ form_end(form) }}
        <a href="{{ path("departamentos_index") }}" class="btn btn-secondary">Volver atras</a>
    </div>
{% endblock %}
